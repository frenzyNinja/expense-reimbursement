        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
  var gr = new GlideAggregate('x_1296763_expense_reimbursement_expense');
  gr.addQuery('claim.number', current.claim.number);
  gr.addAggregate('SUM', 'amount');
  gr.setGroup(false);
  gr.query();
 
 if (!gr.next()) { return; }
  
 var totalAmount = gr.getAggregate('SUM', 'amount');
 updateTotalAmount(+totalAmount);

 function updateTotalAmount(amount) {
    var rec = new GlideRecord('x_1296763_expense_reimbursement_claim');
    rec.addQuery('number', current.claim.number);
    rec.query();
    if (rec.next()) {
      rec.total_amount = amount;
      rec.update();
    }
 }
})(current, previous);]]></script>
